#!/usr/bin/env python

""" Runs Rtabmap through subprocess for environment mapping
 Created: 2/9/2022
"""

__author__ = "Mike Hagenow"

import rospy
import time
from std_msgs.msg import String, Float64
from sensor_msgs.msg import PointCloud2
import numpy as np
import rospkg
import subprocess32

class EnvMapping:
    def __init__(self):
        rospy.init_node('env_mapping')
        self._p = None
        self.lastcloud = None
        self.pub = rospy.Publisher("/filtered_cloud",PointCloud2, queue_size =1, latch = True)
        time.sleep(0.5)

        # Subscribe to start/stop mapping
        rospy.Subscriber("rvizToggle", String, self.mappingToggle)
        rospy.Subscriber("/rtabmap/cloud_map",PointCloud2,self.saveCloud)

    def saveCloud(self,data):
        self.lastcloud = data

    def mappingToggle(self,data):
        if data.data == "on":
            self.startMapping()
        elif data.data == "off":
            self.stopMapping()

    def startMapping(self):
        if self._p is not None:
            self._p.terminate()
        self._p = subprocess32.Popen(["roslaunch", "drone_panda", "mapping_rtabmap.launch"])
       
    def stopMapping(self):
        if self._p is not None:
            self._p.terminate()  
        if self.lastcloud:
            self.pub.publish(self.lastcloud)
            

       
if __name__ == "__main__":
    mapper = EnvMapping()
    rospy.spin()





